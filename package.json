{
  "name": "adf-lib-js",
  "version": "0.3.2",
  "description": "A TypeScript library for creating and manipulating ADF (Atlassian Document Format) documents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "keywords": [
    "adf",
    "atlassian",
    "document",
    "format",
    "markup",
    "typescript"
  ],
  "author": {
    "name": "Dimuthu Lakmal",
    "email": "info@lakmal.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lakmal98/adf-lib-js.git"
  },
  "bugs": {
    "url": "https://github.com/lakmal98/adf-lib-js/issues"
  },
  "homepage": "https://github.com/lakmal98/adf-lib-js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
